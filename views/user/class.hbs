<div class="container">
  <div class="row justify-content-between m-4 align-items-center">
    <a class="h3 font-weight-bold title text-danger" href="/">
      {{title}}
    </a>
    <div class="text-danger">
      Class code:
      <div class="font-weight-bold">
        {{class._id}}
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="card mb-2">
        <div class="card-body">
          <h5 class="text-danger">
            Meeting Link
          </h5>
          A zoom link
        </div>
      </div>
      <div class="card mb-2">
        <div class="card-body">
          <div>
            <h5 class="text-danger">
              Assignments
            </h5>
            No assignments yet
          </div>
        </div>
      </div>
      <div class="card mb-2">
        <div class="card-body">
          <h5 class="text-danger">
            Important dates
          </h5>
          Important dates and stuff will show up here
        </div>
      </div>
    </div>
    <div class="col-md-8">
			<h4 class="text-danger font-weight-bold mb-4">{{class.name}}</h4>
      <div class="card">
        <div class="card-body">
          <div>
            <h5 class="text-danger">
              Description
            </h5>
            {{class.description}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>