<div class="container">
  <div class="row justify-content-center m-4">
    <div class="h3 font-weight-bold title text-danger">
      {{title}}
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="card rounded-1 mb-2">
        <div class="card-body">
          <div class="row justify-content-center">
            <img
              src="https://cdn.discordapp.com/avatars/{{user.discordId}}/{{user.avatar}}"
              alt="discord-profile"
              class="rounded-circle"
            />
          </div>
          <div class="row justify-content-center mt-3">
            <div class="h5 font-weight-bold">
              {{user.username}}#{{user.discriminator}}
            </div>
          </div>
        </div>
      </div>
      <div class="card rounded-1">
        <div class="card-header font-weight-bold border-0 font-weight-bold">
          Assignments this week
        </div>
        <div class="card-body">
          {{#if assignments}}
            assignments show up here
          {{else}}
            No assignments coming up
          {{/if}}
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <div class="card rounded-1">
        <div class="card-header border-0 font-weight-bold h5">
          <div class="row justify-content-between mx-1">
            <div>My Classes</div>
            <div><a href="/u/new" class="text-danger">+</a></div>
          </div>
        </div>
        <div class="card-body">
          {{#if classes}}
            Classes will appear here
          {{else}}
          You are not enrolled in any classes yet
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>